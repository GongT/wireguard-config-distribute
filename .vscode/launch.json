	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Server",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "${workspaceFolder}/cmd/server",
			"args": [
				"--server-name=test",
				"--ip-nohttp"
			]
		},
		{
			"name": "Launch Client",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "${workspaceFolder}/cmd/client",
			"args": [
				"--server=127.0.0.1",
				"--server-ca=/root/.wireguard-config-server/ca.cert.pem",
				"--external-ip-nohttp"
			]
		},
		{
			"name": "Launch Test Generate",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "${workspaceFolder}/tools/generate.go",
			"cwd": "${workspaceFolder}/cmd/client/client",
			"env": {
				"GOFILE": "arguments.go",
				"GOPACKAGE": "client"
			}
		}
	]
}
